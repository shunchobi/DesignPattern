{
  "compilerOptions": {
    "target": "ES2019",      
    "module": "commonjs",    
    "strict": true,         
    "noImplicitAny": true,     
    "strictNullChecks": true,  
    "noImplicitThis": true,    
    "esModuleInterop": true ,
    "jsx": "preserve"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
